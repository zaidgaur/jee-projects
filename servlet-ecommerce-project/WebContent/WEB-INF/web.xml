<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>e-com-app</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>offer</param-name>
    <param-value>EId sell</param-value>
  </context-param>
  <servlet>
    <servlet-name>es</servlet-name>
    <servlet-class>com.zaid.ecommerce.ElectronicsClass</servlet-class>
    <init-param>
      <param-name>discount</param-name>
      <param-value>13%</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>es</servlet-name>
    <url-pattern>/ElectronicsClass</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ha</servlet-name>
    <servlet-class>com.zaid.ecommerce.HAClass</servlet-class>
    <init-param>
      <param-name>discount</param-name>
      <param-value>23%</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ha</servlet-name>
    <url-pattern>/HAClass</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ct</servlet-name>
    <servlet-class>com.zaid.ecommerce.ClothsClass</servlet-class>
    <init-param>
      <param-name>discount</param-name>
      <param-value>43%</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ct</servlet-name>
    <url-pattern>/ClothsClass</url-pattern>
  </servlet-mapping>
</web-app>